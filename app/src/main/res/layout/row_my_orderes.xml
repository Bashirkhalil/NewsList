<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/padding_5"
    android:layout_marginTop="4dp"
    android:layout_marginRight="@dimen/padding_5">


    <LinearLayout
        android:id="@+id/onclickClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        android:paddingBottom="@dimen/padding_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="1">


            <FrameLayout
                android:id="@+id/framelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_5"
                android:layout_marginTop="@dimen/padding_20"
                android:layout_marginRight="@dimen/padding_5"
                android:visibility="gone">

                <ImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"/>

<!--                    android:src="@drawable/flag"-->
<!--                    app:civ_border_color="@color/white"-->
<!--                    app:civ_border_width="1dp" />-->

                <ProgressBar
                    android:id="@+id/homeprogress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_marginRight="@dimen/padding_30"
                android:id="@+id/startLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="items"
                android:textSize="@dimen/padding_16"
                android:textColor="@color/colorPrimary" />

            <LinearLayout
                android:layout_marginTop="@dimen/padding_5"
                android:id="@+id/placeHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"

                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="items"
                    android:textColor="#786D6D"
                    android:textSize="@dimen/padding_18" />


                <ImageView
                    android:layout_marginRight="@dimen/padding_2"
                    android:id="@+id/cvcv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/abc_vector_test"
                    android:contentDescription="@null" />

            </LinearLayout>



            <TextView
                android:layout_marginRight="@dimen/padding_30"
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"

                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="items"
                android:textSize="@dimen/padding_15"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>


        <View
            android:layout_marginTop="@dimen/padding_25"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginRight="@dimen/padding_15"
            android:layout_marginLeft="@dimen/padding_15"
            android:background="#786D6D"
            android:padding="0.5dp" />


    </LinearLayout>

</LinearLayout>